{
  "name": "wp-gulp-boilerplate",
  "description": "Gulp boilerplate for WordPress themes, utilized by Weron.",
  "version": "1.0.0",
  "author": "Weron <hello@weron.studio>",
  "repository": "https://github.com/weronstudio/wp-gulp-boilerplate",
  "main": "gulpfile.mjs",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "gulp",
    "boilerplate"
  ],
  "scripts": {
    "dev": "gulp",
    "zip": "gulp bundle"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "@weron/eslint-config": "^1.0.5",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.3",
    "cssnano": "^7.0.6",
    "gulp": "^5.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^9.1.0",
    "gulp-postcss": "^10.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-zip": "^6.0.0",
    "postcss": "^8.4.47",
    "postcss-discard-comments": "^7.0.3",
    "prettier": "^3.3.3",
    "sass": "^1.80.4"
  },
  "eslintConfig": {
    "extends": "@weron/eslint-config/vanilla"
  },
  "eslintIgnore": [
    "assets/",
    "src/vendor/"
  ],
  "prettier": {
    "overrides": [
      {
        "files": "*.php",
        "options": {
          "parser": "php",
          "plugins": [
            "@prettier/plugin-php"
          ],
          "braceStyle": "1tbs",
          "phpVersion": "8.1"
        }
      }
    ]
  }
}